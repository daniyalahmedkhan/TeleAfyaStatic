<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:id="@+id/home_container"
        tools:context="com.example.ast.teleafya.Ui.Patient_Ui.Patient_Timeline_Activity">


        <RelativeLayout
            android:id="@+id/timeline_header"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@mipmap/profile_bg">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/timeline" />

            <TextView
                android:id="@+id/home_user_name"
                android:layout_marginLeft="60dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Welcome Shivank"
                android:textColor="#fff" />

            <TextView
                android:layout_below="@+id/home_user_name"
                android:layout_marginLeft="60dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are looking fit"
                android:textColor="#fff" />

            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@mipmap/notification" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/circular_progressbar"
                        android:background="@drawable/circle_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="75" />

                    <TextView
                        android:textColor="#346da3"
                        android:textSize="12sp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="33dp"
                        android:layout_alignParentLeft="true"
                        android:text="75%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/circular_progressbar"
                        android:background="@drawable/circle_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="75" />
                    <TextView
                        android:textColor="#346da3"
                        android:textSize="12sp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="35dp"
                        android:layout_centerHorizontal="true"
                        android:text="50%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        android:layout_marginRight="20dp"

                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/circular_progressbar"
                        android:background="@drawable/circle_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="50" />
                    <TextView
                        android:textColor="#346da3"
                        android:textSize="12sp"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="32dp"
                        android:layout_alignParentRight="true"
                        android:text="75%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#346da3"

                        android:textSize="10sp"
                        android:layout_marginLeft="10dp"
                        android:text="MY COURSE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#346da3"

                        android:textSize="10sp"
                        android:layout_centerHorizontal="true"
                        android:text="OVERALL HEALTH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#346da3"

                        android:textSize="10sp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:text="APPOINTMENT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <ListView
                    android:dividerHeight="0dp"
                    android:divider="@color/transparent"
                    android:id="@+id/post_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>



            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/menu_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#fff"
            android:paddingTop="15dp"
            android:weightSum="5">


            <LinearLayout
                android:id="@+id/home_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">


                <ImageView
                    android:id="@+id/home_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/app_home" />

                <TextView
                    android:textColor="#346da3"
                    android:id="@+id/home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="HOME"
                    android:textSize="10sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/provider_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"

                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/provider_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/app_providers" />

                <TextView
                    android:id="@+id/top_text"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="PROVIDER"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/appointment_view"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/notification_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/appoitments" />

                <TextView
                    android:id="@+id/notification_text"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="APPOINTMENTS"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/message_view"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/app_messages" />

                <TextView
                    android:id="@+id/profile_text"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="MESSAGES"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeline_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/setting_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/app_timeline" />

                <TextView
                    android:id="@+id/setting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="TIMELINE"
                    android:textSize="10sp" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#1987f1"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />



</android.support.v4.widget.DrawerLayout>
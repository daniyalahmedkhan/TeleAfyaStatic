<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/booking_vector"
            android:layout_marginTop="20dp"
            android:id="@+id/img1"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img1"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/txtHead"
            android:text="Booking Method"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtHead"
            android:id="@+id/txtDes"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:text="You can opt eaither one of the option"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDes"
            android:gravity="center"
            android:id="@+id/txtDes2"
            android:textColor="@color/colorText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textSize="12dp"
            android:text="below for sample collection" />


        <Button
            android:id="@+id/visit_Lab"
            android:layout_below="@id/txtDes2"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            android:background="#58a7f2"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:gravity="center"
            android:paddingRight="20dp"

            android:paddingLeft="20dp"
            android:drawableRight="@mipmap/next_arrow_white"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Visit Lab"
            android:layout_width="250dp"
            android:layout_height="35dp" />



        <Button
            android:id="@+id/home_collc"
            android:layout_below="@id/visit_Lab"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            android:background="#58a7f2"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:gravity="center"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:drawableRight="@mipmap/next_arrow_white"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="Home Collection"
            android:layout_width="250dp"
            android:layout_height="35dp" />


    </RelativeLayout>


</RelativeLayout>